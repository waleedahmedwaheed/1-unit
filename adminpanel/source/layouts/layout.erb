    <%unless data.page.is_dialog %>
    <div class="content">
        <%unless data.page.header_text.blank? %>
        <div class="header">
            <%= yield_content :title %>
            <h1 class="page-title"><%=data.page.header_text%></h1>
        </div>
        <%end%>
        <%= yield_content :breadcrumb %>
        <div class="container-fluid">
            <div class="row-fluid">
                    <%= yield %>

                    <%unless data.page.show_footer == false %>
                    <footer>
